  <!-- JavaScript: interactive behavior -->
  <script>
    // Basic DOM helpers
    const alertBtn = document.getElementById('alertBtn');
    const addItemBtn = document.getElementById('addItemBtn');
    const favList = document.getElementById('favList');
    const newItemInput = document.getElementById('newItem');
    const addFromInput = document.getElementById('addFromInput');
    const clearList = document.getElementById('clearList');
    const heroImage = document.getElementById('heroImage');
    const toggleTheme = document.getElementById('toggleTheme');

    // 1) Simple alert interaction
    alertBtn.addEventListener('click', () => {
      alert('Hello! You clicked the alert button. Welcome to Task 1 demo.');
    });

    // 2) Add a sample list item (demonstrates DOM creation and append)
    addItemBtn.addEventListener('click', () => {
      const li = document.createElement('li');
      li.textContent = 'New interactive item added at ' + new Date().toLocaleTimeString();
      favList.appendChild(li);
      li.scrollIntoView({behavior: 'smooth'});
    });

    // 3) Add from input with basic validation
    addFromInput.addEventListener('click', () => {
      const text = newItemInput.value.trim();
      if (!text) {
        // show a simple inline validation (not a JS alert)
        newItemInput.style.borderColor = '#ff6b6b';
        newItemInput.placeholder = 'Please enter a value';
        return;
      }
      const li = document.createElement('li');
      li.textContent = text;
      favList.appendChild(li);
      newItemInput.value = '';
      newItemInput.style.borderColor = '#dbeafe';
    });

    // 4) Clear list
    clearList.addEventListener('click', () => {
      if (!confirm('Clear all favorite items?')) return;
      favList.innerHTML = '';
    });

    // 5) Change hero image on click (demonstrates attribute manipulation)
    heroImage.addEventListener('click', () => {
      // swap between two placeholder images
      const current = heroImage.src;
      heroImage.src = current.includes('900x360') 
        ? 'https://via.placeholder.com/900x360.png?text=Alternate+View'
        : 'https://via.placeholder.com/900x360.png?text=Your+Project+Screenshot';
    });

    // 6) Simple theme toggle (adds dark mode styles)
    let dark = false;
    toggleTheme.addEventListener('click', () => {
      dark = !dark;
      if (dark){
        document.documentElement.style.setProperty('--bg', '#0b1220');
        document.documentElement.style.setProperty('--card', '#071023');
        document.documentElement.style.setProperty('--primary', '#60a5fa');
        document.documentElement.style.setProperty('--muted', '#94a3b8');
        document.body.style.color = '#e6eef8';
        toggleTheme.textContent = 'Toggle Light';
      } else {
        document.documentElement.style.setProperty('--bg', '#f6f8fa');
        document.documentElement.style.setProperty('--card', '#ffffff');
        document.documentElement.style.setProperty('--primary', '#0b69ff');
        document.documentElement.style.setProperty('--muted', '#6b7280');
        document.body.style.color = '#0f1724';
        toggleTheme.textContent = 'Toggle Dark';
      }
    });

    // Accessibility: allow Enter key to add item from input
    newItemInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') addFromInput.click();
    });
  </script>
</body>
