Task 4: Full Project Implementation 🏗️
Action: Enhance a to-do list app so tasks are saved and retrieved using localStorage.

HTML:

HTML

<h1>My To-Do List</h1>
<input type="text" id="taskInput" placeholder="Add a new task...">
<button id="addTaskBtn">Add Task</button>
<ul id="taskList"></ul>
JavaScript:

JavaScript

const taskInput = document.getElementById('taskInput');
const addTaskBtn = document.getElementById('addTaskBtn');
const taskList = document.getElementById('taskList');

// Load tasks from localStorage when the page loads
document.addEventListener('DOMContentLoaded', () => {
  const tasks = JSON.parse(localStorage.getItem('tasks')) || [];
  tasks.forEach(task => addTaskToDOM(task));
});

// Function to add a task to the DOM and localStorage
function addTaskToDOM(taskText) {
  const li = document.createElement('li');
  li.textContent = taskText;

  // Add a delete button to each task
  const deleteBtn = document.createElement('button');
  deleteBtn.textContent = 'X';
  deleteBtn.addEventListener('click', () => {
    // Remove the task from the DOM and localStorage
    li.remove();
    removeTaskFromLocalStorage(taskText);
  });
  li.appendChild(deleteBtn);
  taskList.appendChild(li);
}

// Save tasks to localStorage
function saveTasksToLocalStorage() {
  const tasks = [];
  taskList.querySelectorAll('li').forEach(item => {
    // Get the text content of the task (excluding the delete button text)
    tasks.push(item.firstChild.textContent.trim());
  });
  localStorage.setItem('tasks', JSON.stringify(tasks));
}

// Remove a specific task from localStorage
function removeTaskFromLocalStorage(taskText) {
  let tasks = JSON.parse(localStorage.getItem('tasks')) || [];
  tasks = tasks.filter(task => task !== taskText);
  localStorage.setItem('tasks', JSON.stringify(tasks));
}

// Add a new task when the button is clicked
addTaskBtn.addEventListener('click', () => {
  const newTask = taskInput.value.trim();
  if (newTask) {
    addTaskToDOM(newTask);
    saveTasksToLocalStorage();
    taskInput.value = ''; // Clear the input field
  }
});
